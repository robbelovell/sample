{
    "files.exclude": {
        "**/node_modules/**": true,
        "**/lib/**": true,
        "**/dist/**": true,
        "**/package-lock.json/**": true
    },
    "cSpell.words": [
        "codezero",
        "kubeconfig",
        "kubernetes",
        "k8s"
    ],
    "typescript.preferences.quoteStyle": "single",
    "typescript.format.semicolons": "remove",
    "barrelr.useDoubleQuotes": false,
    "barrelr.useSemiColons": false,
    "trailing-spaces.trimOnSave": true,
    "editor.insertSpaces": true,
    "editor.tabSize": 2
}
